<div class="product">
  <h3><%= product.name %></h3>
  <% if product.image_filename.present? %>
    <%= image_tag product.image_filename %>
  <% end %>
  <p><%= product.flavor_text %></p>
  <%= form_tag("#", method: "get") do %>
    <%= radio_button_tag(:condition, "mint_#{product.id}") %>
    <%= label_tag("condition_mint_#{product.id}", "Mint") %>
    <%= radio_button_tag(:condition, "played_#{product.id}") %>
    <%= label_tag("condition_played_#{product.id}", "Played") %>
    <%= select("select_#{product.id}", "value", (0..product.stock_quantity).collect {| quantity | [ "#{quantity}", quantity ] }) %>
    <%= number_to_currency(product.price) %>
    <%= submit_tag("Add to cart") %>
  <% end %>
</div>